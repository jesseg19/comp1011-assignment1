<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.assignment1.AthleteHeightViewController">
   <children>
      <BorderPane layoutX="-2.0" prefHeight="400.0" prefWidth="600.0">
         <center>
            <BarChart fx:id="barChart" BorderPane.alignment="CENTER">
              <xAxis>
                <CategoryAxis fx:id="ageGroupAxis" label="Age Group" side="BOTTOM" />
              </xAxis>
              <yAxis>
                <NumberAxis fx:id="heightAxis" label="Height(CM)" side="LEFT" />
              </yAxis>
            </BarChart>
         </center>
         <top>
            <Label text="Olympic Athlete Height" BorderPane.alignment="CENTER" />
         </top>
         <bottom>
            <Button mnemonicParsing="false" onAction="#changeScreenButtonPushed" text="Table View" BorderPane.alignment="BOTTOM_LEFT">
               <BorderPane.margin>
                  <Insets bottom="10.0" left="30.0" />
               </BorderPane.margin>
            </Button>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
